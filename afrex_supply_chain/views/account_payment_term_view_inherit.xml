<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="asc_account_payment_term_view" model="ir.ui.view">
        <field name="name">asc.account.payment.term.form</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="account.view_payment_term_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[1]" position="after">
                <group string="Payment Breakdown">
                </group>
                <field name="breakdown_ids">
                    <tree editable="bottom">
                        <field name="percentage" widget="percentage" required="True"/>
                        <field name="name" required="True"/>
                        <field name="payment_type" required="True"/>
                        <field name="payment_id" column_invisible="True"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>

</odoo>        