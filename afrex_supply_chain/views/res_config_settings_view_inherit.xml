<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="asc_res_config_settings_view" model="ir.ui.view">
        <field name="name">asc.res.config.settings.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="Afrex Supply Chain" data-string="Afrex Supply Chain" name="afrex_supply_chain">
                    <block title="General" name="asc_general_container">
                        <field name="company_id" invisible="1"/>
                        <setting>
                            <field name="credit_cost_rate" widget="percentage"/>
                        </setting>
                        <setting>
                            <field name="credit_insurance_rate" widget="percentage"/>
                        </setting>
                        <setting>
                            <field name="minimum_gross_profit" widget="percentage"/>
                        </setting>
                        <setting>
                            <field name="minimum_markup" widget="percentage"/>
                        </setting>
                        <!-- <setting>
                            <field name="logistics_service_unit"/>
                        </setting> -->
                    </block>
                    <!-- <block title="Documents" name="asc_document_container">
                        <setting>
                            <field name="display_partner_child"/>
                        </setting>
                    </block> -->
                    <block title="Default Documents (Maritime)" name="asc_document_container_sea">
                        <setting>
                            <field name="sea_purchase_incoming_doc_ids" widget="many2many_tags"/>
                        </setting>
                        <setting>
                            <field name="sea_sale_invoice_incoming_doc_ids" widget="many2many_tags"/>
                        </setting>
                        <setting>
                            <field name="sea_purchase_outgoing_doc_ids" widget="many2many_tags"/>
                        </setting>
                        <setting>
                            <field name="sea_sale_invoice_outgoing_doc_ids" widget="many2many_tags"/>
                        </setting>
                    </block>
                    <block title="Default Documents (Road)" name="asc_document_container_road">
                        <setting>
                            <field name="road_purchase_incoming_doc_ids" widget="many2many_tags"/>
                        </setting>
                        <setting>
                            <field name="road_sale_invoice_incoming_doc_ids" widget="many2many_tags"/>
                        </setting>
                        <setting>
                            <field name="road_purchase_outgoing_doc_ids" widget="many2many_tags"/>
                        </setting>
                        <setting>
                            <field name="road_sale_invoice_outgoing_doc_ids" widget="many2many_tags"/>
                        </setting>
                    </block>
                    <block title="Approval" name="asc_approval_container">
                        <setting>
                            <field name="payment_request_approver_ids" widget="many2many_tags"/>
                        </setting>
                        <setting>
                            <field name="profit_estimate_approver_ids" widget="many2many_tags"/>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>

    <record id="action_asc_res_config_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module': 'afrex_supply_chain'}</field>
    </record>

