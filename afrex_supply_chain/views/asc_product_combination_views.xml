<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="asc_product_combination_tree_view" model="ir.ui.view">
        <field name="name">asc.product.combination.tree</field>
        <field name="model">asc.product.combination</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_id" optional="hide"/>
                <field name="name" optional="show"/>
                <field name="cas_number" optional="hide"/>
                <field name="first_spec_id"/>
                <field name="second_spec_id"/>
                <field name="third_spec_id"/>
                <field name="packaging_id"/>
                <field name="supplier_ids" widget="many2many_tags" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="asc_product_combination_search_view" model="ir.ui.view">
        <field name="name">asc.product.combination.search</field>
        <field name="model">asc.product.combination</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="product_id"/>
                <field name="packaging_id"/>
                <field name="first_spec_id"/>
                <field name="second_spec_id"/>
                <field name="third_spec_id"/>
                <field name="packaging_id"/>
                <group expand="1" string="Group By">
                    <filter string="Product" name="group_product" context="{'group_by':'product_id'}"/>
                    <filter string="Packaging" name="group_packaging" context="{'group_by':'packaging_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_asc_product_combination" model="ir.actions.act_window">
        <field name="name">Product Combinations</field>
        <field name="res_model">asc.product.combination</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add Product Combinations
            </p>
        </field>
    </record>

    <menuitem
        id="menu_asc_product_combination"
        name="Products"
        action="action_asc_product_combination"
        parent="crm.crm_menu_config"
        sequence="100"/>

</odoo>