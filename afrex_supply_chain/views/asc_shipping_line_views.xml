<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="asc_shipping_line_tree_view" model="ir.ui.view">
        <field name="name">asc.shipping.line.tree</field>
        <field name="model">asc.shipping.line</field>
        <field name="arch" type="xml">
            <tree string="Shipping Lines" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="action_asc_shipping_line" model="ir.actions.act_window">
        <field name="name">Shipping Lines</field>
        <field name="res_model">asc.shipping.line</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add shipping lines
            </p>
        </field>
    </record>

    <menuitem id="menu_asc_shipping_line"
              name="Shipping Lines and Transporters"
              action="action_asc_shipping_line"
              parent="crm.crm_menu_config"
              sequence="100"/>
</odoo>