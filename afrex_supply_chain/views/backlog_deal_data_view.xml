<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="asc_backlog_form_view" model="ir.ui.view">
        <field name="name">backlog</field>
        <field name="model">asc.backlog</field>
        <field name="arch" type="xml">
            <form string="Migrated Data">
                <sheet>
                    <group>
                        <group string="Trade Folder Details">
                            <field name="trade_folder" readonly="True"/>
                            <field name="deal_status_logistics" widget="selection_badge" readonly="True"/>
                            <field name="eazzy_filed" widget="selection_badge" readonly="True"/>
                            <field name="deal_status_accounting" widget="selection_badge" readonly="True"/>
                        </group>
                        <group string="Product and Order Details">
                            <field name="product" readonly="True"/>
                            <field name="packaging" readonly="True"/>
                            <field name="product_specification" readonly="True"/>
                            <field name="currency_code" readonly="True"/>
                            <field name="price_per_ton" readonly="True"/>
                            <field name="mt_ordered" readonly="True"/>
                            <field name="mt_delivered" readonly="True"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="Supplier">
                            <group>
                                <group string="Supplier">
                                    <field name="supplier" readonly="True"/>
                                    <field name="port_of_loading" readonly="True"/>
                                    <field name="origin" readonly="True"/>
                                    <field name="afrex_po_number" readonly="True"/>
                                    <field name="supplier_pfi_date" readonly="True"/>
                                    <field name="supplier_pfi_ref" readonly="True"/>
                                    <field name="supplier_commercial_invoice_no" readonly="True"/>
                                    <field name="subject_to_switch" readonly="True"/>
                                    <field name="switch_invoice_no" readonly="True"/>
                                    <field name="switch_amount" readonly="True"/>
                                    <field name="tariff_code" readonly="True"/>
                                </group>
                                <group string="Supplier Payment details">
                                    <field name="supplier_payment_terms" readonly="True"/>
                                    <field name="advance_payment_percent" readonly="True"/>
                                    <field name="final_payment_percent" readonly="True"/>
                                    <field name="advance_amount" readonly="True"/>
                                    <field name="advance_payment_concluded" readonly="True"/>
                                    <field name="advance_payment_date" readonly="True"/>
                                    <field name="final_amount_usd" readonly="True"/>
                                    <field name="final_payment_concluded" readonly="True"/>
                                    <field name="final_payment_date" readonly="True"/>
                                </group>
                            </group>
                        </page>
                        <page name="Buyer">
                            <group string="Buyer" colspan="2">
                                <group string="Buyer">
                                    <field name="buyer" readonly="True"/>
                                    <field name="port_of_discharge" readonly="True"/>
                                    <field name="consignee_notify" readonly="True"/>
                                    <field name="buyer_po_number" readonly="True"/>
                                    <field name="buyer_po_date" readonly="True"/>
                                </group>
                                <group string="Buyer Payment details">
                                    <field name="buyer_payment_terms" readonly="True"/>
                                    <field name="selling_price_per_ton_usd" readonly="True"/>
                                    <field name="buyer_incoterms" readonly="True"/>
                                    <field name="amount_usd" readonly="True"/>
                                    <field name="amount_zar" readonly="True"/>
                                    <field name="payment_due_date" readonly="True"/>
                                    <field name="buyer_paid" readonly="True"/>
                                    <field name="buyer_actual_payment_date" readonly="True"/>
                                </group>
                            </group>
                        </page>
                        <page name="Costing">
                            <group string="Costing" colspan="2">
                                <group string="Supplier Costing">
                                    <field name="supplier_invoice_amount" readonly="True"/>
                                    <field name="no_of_packages" readonly="True"/>
                                    <field name="gross_weight_kgs" readonly="True"/>
                                    <field name="supplier_fob_usd" readonly="True"/>
                                    <field name="supplier_freight_usd" readonly="True"/>
                                    <field name="supplier_insurance_usd" readonly="True"/>
                                </group>
                                <group string="Afrex Costing">
                                    <field name="afrex_fob_usd" readonly="True"/>
                                    <field name="proforma_invoice_raised" readonly="True"/>
                                    <field name="proforma_invoice_date" readonly="True"/>
                                    <field name="commercial_invoice_raised" readonly="True"/>
                                    <field name="commercial_invoice_date" readonly="True"/>
                                    <field name="afrex_invoice_number" readonly="True"/>

                                </group>
                            </group>
                        </page>
                        <page name="Logistics">
                            <group colspan="2">
                                <group string="Logistics">
                                    <field name="carrier_shipping_line" readonly="True"/>
                                    <field name="forwarder" readonly="True"/>
                                    <field name="bl_booking_no" readonly="True"/>
                                    <field name="vessel_voyage" readonly="True"/>
                                    <field name="container_no" readonly="True"/>
                                    <field name="container_count" readonly="True"/>
                                    <field name="container_size_type" readonly="True"/>
                                    <field name="seal_no" readonly="True"/>
                                </group>
                                <group>
                                    <field name="expected_shipment_date" readonly="True"/>
                                    <field name="actual_expected_shipment_date" readonly="True"/>
                                    <field name="eta_arrival_date" readonly="True"/>
                                    <field name="actual_arrival_pod" readonly="True"/>
                                    <field name="comment_status" readonly="True"/>
                                    <field name="shipper_docs" readonly="True"/>
                                    <field name="shipper_docs_date" readonly="True"/>
                                    <field name="shipper_incoterms" readonly="True"/>
                                    <field name="shipment_default" readonly="True"/>
                                    <field name="bl_release" readonly="True"/>
                                    <field name="bl_release_date" readonly="True"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="asc_backlog_tree_view" model="ir.ui.view">
        <field name="name">asc.backlog.tree</field>
        <field name="model">asc.backlog</field>
        <field name="arch" type="xml">
            <tree string="Migrated Data">
                <field name="trade_folder"/>
                <field name="supplier"/>
                <field name="buyer"/>
                <field name="product"/>
                <field name="price_per_ton"/>
                <field name="mt_ordered"/>
                <field name="mt_delivered"/>
                <field name="afrex_po_number"/>
            </tree>
        </field>
    </record>

    <record id="view_backlog_search" model="ir.ui.view">
        <field name="name">backlog_search</field>
        <field name="model">asc.backlog</field>
        <field name="arch" type="xml">
            <search>
                <field name="trade_folder" string="Trade Folder"
                       filter_domain="['|','|','|','|','|',('trade_folder','ilike',self),('buyer','ilike',self),('supplier','ilike',self),('product','ilike',self),('eazzy_filed','ilike',self),('deal_status_logistics','ilike',self)]"/>
                <field name="eazzy_filed"/>
                <field name="buyer" string="Buyer"/>
                <field name="supplier" string="Supplier"/>
                <field name="product" string="Product"/>
                <field name="deal_status_logistics" string="Deal Status"/>
                <!--                <field name="eazzy_filed" string="Status"/>-->
            </search>
        </field>
    </record>


    <record id="action_asc_backlog_data" model="ir.actions.act_window">
        <field name="name">Migrated Data</field>
        <field name="res_model">asc.backlog</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add Migrated data
            </p>
        </field>
    </record>

    <menuitem
            id="menu_asc_backlog_data"
            name="Migrated Data"
            action="action_asc_backlog_data"
            parent="afrex_supply_chain.asc_config_menu"
            sequence="110"/>

</odoo>
