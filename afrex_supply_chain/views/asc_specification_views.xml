<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="asc_specification_tree_view" model="ir.ui.view">
        <field name="name">asc.product.specification.tree</field>
        <field name="model">asc.product.specification</field>
        <field name="arch" type="xml">
            <tree string="Sepcifications" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_asc_specification" model="ir.actions.act_window">
        <field name="name">Product Specifications</field>
        <field name="res_model">asc.product.specification</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add product specifications for your products.
            </p>
        </field>
    </record>

</odoo>