<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="asc_product_template_form_view" model="ir.ui.view">
        <field name="name">asc.product.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- [@name='general_information'] -->
            <!-- <xpath expr="//notebook" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath> -->
            <xpath expr="//div[@name='options']" position="after">
                <group>
                    <group>
                        <field name="tariff_code"/>
                    </group>
                </group>
                <notebook>
                    <page>
                        <field name="combination_ids">
                            <tree editable="bottom">
                                <field name="product_id" column_invisible="True"/>
                                <field name="product_variant_id" column_invisible="True"/>
                                <field name="cas_number" optional="hide"/>
                                <field name="first_spec_id" context="{'default_level': 'spec1'}" options="{'no_create_edit':True}"/>
                                <field name="second_spec_id" context="{'default_level': 'spec2'}" options="{'no_create_edit':True}"/>
                                <field name="third_spec_id" context="{'default_level': 'spec3'}" options="{'no_create_edit':True}"/>
                                <field name="packaging_id" options="{'no_create_edit':True}"/>
                                <field name="supplier_ids" widget="many2many_tags"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
            <xpath expr="//div[@name='options']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
        </field>
    </record>

</odoo>