<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="asc_view_company_form_view" model="ir.ui.view">
        <field name="name">asc.res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="incoterm_implementation_date"/>
                <field name="incoterm_implementation_year"/>

            </xpath>
            <xpath expr="//field[@name='color']" position="after">
                <field name="seal" widget="image" class="oe_avatar"/>
            </xpath>
            <xpath expr="//notebook/page[@name='general_info']" position="before">
                <page string="Default Documents">
                    <group>
                        <group string="Default Documents (Maritime)">
                            <field name="sea_purchase_incoming_doc_ids" widget="many2many_tags"/>
                            <field name="sea_purchase_outgoing_doc_ids" widget="many2many_tags"/>
                            <field name="sea_sale_invoice_incoming_doc_ids" widget="many2many_tags"/>
                            <field name="sea_sale_invoice_outgoing_doc_ids" widget="many2many_tags"/>
                        </group>
                        <group string="Default Documents (Road)">
                            <field name="road_purchase_incoming_doc_ids" widget="many2many_tags"/>
                            <field name="road_purchase_outgoing_doc_ids" widget="many2many_tags"/>
                            <field name="road_sale_invoice_incoming_doc_ids" widget="many2many_tags"/>
                            <field name="road_sale_invoice_outgoing_doc_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
