<odoo>

    <record id="view_supplier_invoice_wizard_form" model="ir.ui.view">
        <field name="name">asc.supplier.invoice.form</field>
        <field name="model">asc.supplier.invoice</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="purchase_order_id" invisible="True"/>
                    <field name="can_confirm" invisible="True"/>
                    <field name="breakbulk_container" invisible="True"/>
                    <field name="ref" required="True"/>
                    <field name="date" string="Invoice Date"/>
                    <field name="quantity" readonly="True"/>
                </group>
                <group>
                    <group string="Logistics">
                        <field name="vessel" string="Vessel Name"/>
                        <field name="voyage"/>
                        <field name="sob_date"/>
                        <field name="expected_arrival_date"/>
                    </group>
                    <group string="Costing">
                        <field name="incoterm_selection" invisible="True"/>
                        <label for="fob_unit" string="FOB/MT"/>
                        <div class="o_row">
                            <field name="fob_unit" widget="float" options="{'precision': 2}"/>
                            Total: <field name="fob_amount" readonly="True" widget="float" options="{'precision': 2}"/>
                        </div>
                        <field name="insurance_amount" readonly="incoterm_selection != 'cif'" widget="float" options="{'precision': 2}"/>
                        <label for="freight_unit" string="Freight/MT" invisible="breakbulk_container != 'breakbulk'"/>
                        <div class="o_row" invisible="breakbulk_container != 'breakbulk'">
                            <field name="freight_unit" readonly="incoterm_selection == 'fob'" widget="float" options="{'precision': 2}"/>
                            Total: <field name="freight_amount" readonly="True" widget="float" options="{'precision': 2}"/>
                        </div>
                        <label for="freight_amount" string="Freight" invisible="breakbulk_container != 'container'"/>
                        <div class="o_row" invisible="breakbulk_container != 'container'">
                            <field id="freight_amount" name="freight_amount" readonly="incoterm_selection == 'fob'" widget="float" options="{'precision': 2}"/>
                            <!-- Freight/MT: <field name="freight_unit" readonly="True" widget="float" options="{'precision': 2}"/> -->
                        </div>
                        <label for="cost_unit" string="CIF/MT" invisible="incoterm_selection != 'cif'"/>
                        <label for="cost_unit" string="CFR/MT" invisible="incoterm_selection != 'cfr'"/>
                        <label for="cost_unit" string="FOB/MT" invisible="incoterm_selection != 'fob'"/>
                        <div class="o_row">
                            <field name="cost_unit" widget="float" options="{'precision': 2}"/>
                            Total: <field name="cost_amount" readonly="True" widget="float" options="{'precision': 2}"/>
                        </div>
                    </group>
                </group>
                <footer>
                    <button id="cannot_confirm" name="action_confirm" string="Confirm" type="object" class="btn-primary disabled" invisible="can_confirm"/>
                    <button id="can_confirm" name="action_confirm" string="Confirm" type="object" class="btn-primary" invisible="not can_confirm" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_asc_supplier_invoice" model="ir.actions.act_window">
        <field name="name">Supplier Commercial Invoice</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">asc.supplier.invoice</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
</odoo>